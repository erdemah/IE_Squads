<!-- Visualisation code-->
<style>

    body {
        font-family: 'Architects Daughter','cursive';
    }
    .text1{
        font-size: 1.2em;
    }
    .axis path,
    .axis line {
        fill: none;
        stroke: #000;
        shape-rendering: crispEdges;
    }

    .x.axis path {
        display: none;
    }

